root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.{md,nix}]
indent_style = space
indent_size = 2

[nix/sources.json]
indent_style = space
indent_size = 4

[*.{h,c,ttl}]
indent_style = tab

[Makefile]
indent_style = tab

[COMMIT_EDITMSG]
max_line_length = 72
